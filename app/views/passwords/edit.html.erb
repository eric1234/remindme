<% form_for @user, :url => password_path(params[:id]), :method => :put do |u| %>
  <%= u.error_messages %>
  <table class="form">
    <tr>
      <th><%= u.label :password %></th>
      <td><%= u.password_field :password %></td>
    </tr>
    <tr>
      <th><%= u.label :password_confirmation %></th>
      <td><%= u.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= u.submit 'Update' %></td>
    </tr>
  </table>
<% end %>